<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/apartmentShow_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|top">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/cityApartmentShow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stadt"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>

            <EditText
                android:id="@+id/cityApartmentShow_et"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:layout_weight="1">
            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/zipApartmentShow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zip"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>

            <EditText
                android:id="@+id/zipApartmentShow_et"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:layout_weight="1">

            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/streetApartmentShow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>

            <EditText
                android:id="@+id/streetApartmentShow_et"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:layout_weight="1">

            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/houseNumberApartmentShow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hausnummer"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>

            <EditText
                android:id="@+id/houseNumberApartmentShow_et"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:layout_weight="1">

            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/costsApartmentShow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kosten"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>

            <EditText
                android:id="@+id/costsApartmentShow_et"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:layout_weight="1">

            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/sizeApartmentShow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Größe"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>

            <EditText
                android:id="@+id/sizeApartmentShow_et"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:layout_weight="1">

            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/petApartmentShow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haustiere"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/petApartmentShow_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ja"
                android:layout_weight="1">

            </com.google.android.material.checkbox.MaterialCheckBox>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/commercialApartmentShow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Commercial Usage"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/commercialApartmentShow_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ja"
                android:layout_weight="1">

            </com.google.android.material.checkbox.MaterialCheckBox>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/furnishingApartmentShow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Einbau"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/furnishingApartmentShow_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ja"
                android:layout_weight="1">

            </com.google.android.material.checkbox.MaterialCheckBox>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/descriptionApartmentShow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beschreibung"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>

            <EditText
                android:id="@+id/descriptionApartmentShow_et"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:layout_weight="1">

            </EditText>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left">
        <Button
            android:id="@+id/safe_apartmentShow_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speichern"
            android:layout_marginTop="30dp">

        </Button>

        <Button
            android:id="@+id/delete_apartmentShow_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Löschen">

        </Button>

        <Button
            android:id="@+id/set_apartmentShow_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auswählen">

        </Button>
    </LinearLayout>

    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/apartmentShow_navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_header_menu_lessor"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>