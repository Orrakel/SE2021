<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|top">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:textSize="40sp"
            android:textColor="#F000"
            android:layout_marginTop="20dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/filter_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stadt"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>

            <EditText
                android:id="@+id/filter_city_et"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="Minden"
                android:layout_weight="1"
                android:inputType="text">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/filter_sizemin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min Quadratmeter"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>

            <EditText
                android:id="@+id/filter_sizemin_et"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:layout_weight="1">

            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/filter_sizemax_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Quadratmeter"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>

            <EditText
                android:id="@+id/filter_sizemax_et"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:layout_weight="1">

            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/filter_roomsmin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min Räume"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>


            <EditText
                android:id="@+id/filter_roomsmin_et"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:layout_weight="1">

            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/filter_roomsmax_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Räume"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>

            <EditText
                android:id="@+id/filter_roomsmax_et"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:layout_weight="1">

            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/filter_pet_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haustier"
                android:layout_weight="3"
                android:textColor="#F000" />


            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/filter_petyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ja"
                android:layout_weight="1"
                >

            </com.google.android.material.checkbox.MaterialCheckBox>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/filter_costsmin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min Kosten"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>

            <EditText
                android:id="@+id/filter_costsmin_et"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:layout_weight="1">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/filter_costsmax_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Kosten"
                android:layout_weight="3"
                android:textColor="#F000">
            </TextView>

            <EditText
                android:id="@+id/filter_costsmax_et"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:layout_weight="1">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/filter_commercialUsage_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Commercial Usage"
                android:layout_weight="3"
                android:textColor="#F000" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/filter_commercialUsageYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ja"
                android:layout_weight="1"
                >

            </com.google.android.material.checkbox.MaterialCheckBox>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/filter_furnishing_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Einbausachen"
                android:layout_weight="3"
                android:textColor="#F000" />


            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/filter_furnishingYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ja"
                android:layout_weight="1"
                >

            </com.google.android.material.checkbox.MaterialCheckBox>

        </LinearLayout>

        <Button
            android:id="@+id/filter_safeFilter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speichern"
            android:layout_marginTop="30dp">

        </Button>

    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_header_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>